#!/usr/bin/env bash
#set -u
#set -x

trap "exit;" SIGINT SIGTERM

#brew inventory list
INVENTORY=(
openssl
openssl@1.1
packer
pcre
pkg-config
python
python3
ranger
readline
reattach-to-user-namespace
redis
rsync
ruby
s-lang
sbt
scala
snort
springboot
sqlite
squid
ssh-copy-id
sshfs
supervisor
terraform
terraform-inventory
terragrunt
the_silver_searcher
thefuck
tmux
traefik
trash-cli
tree
vault
watch
watchexec
watchman
webp
wget
wxmac
xz
zsh
zsh-completions      
)


   function instBrew (){
      #check is brew is installed, if not then install
         if [ ! -f "/usr/local/bin/brew" ]       # Check if file exists.
            then
         #   eval "$HOMEBREW[$@]"
             /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
         fi
   }

   function instInv () {
         for u in ${INVENTORY[@]}
            do /usr/local/bin/brew install "${u}"
	 done
   }

printf '%s\n' "${INVENTORY[@]}"

instBrew;
instInv;
